{
    "name": "busayo/laravel-mentions",
    "description": "Laravel 5 package that provides facebook-like mention functionality",
    "keywords": [
        "laravel",
        "laravel-mentions",
        "facebook-mentions",
        "autocomplete",
        "smart search"
    ],
    "homepage": "https://github.com/busayo/laravel-mentions",
    "license": "MIT",
    "authors": [
        {
            "name": "Prosper Otemuyiwa",
            "email": "prosperotemuyiwa@gmail.com",
            "homepage": "https://twitter.com/unicodeveloper",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.5.9",
        "laravelcollective/html": "~5.0|~5.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Busayo\\Mention\\": "src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Busayo\\Mention\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
